//@import "../../stylesheets/global.styl"
.result-box
  width 90%
  padding 2%
  margin 0 auto
  opacity 0
  h2
    font-size 3.5vw
    padding 5px
    margin-bottom 35px
    color white
    border-radius(1vw)
  .texts
    list-style none
    no-extra()
    li
      font-size 2vw
      margin-bottom 10px
  div.match_info
    display flex
    h1
      font-size 5vw
      margin 10px
      text-align center
      display none
      border 3px solid
      color crimson
      flex-basis 30%
      padding-top 7%
      text-decoration overline
      border-radius(2vw)
    span.tv
      display none
      color white
      height 150px
      width 200px
      border-radius 50% / 10%
      position relative
      margin 25px auto
      background-color grey
      background-image url("images/no_signal.gif")
      box-shadow(0px 10px 10px #3F4244)
      &:after
        content ''
        position absolute
        top 10%
        bottom 10%
        right -5%
        left -5%
        background rgba(128, 128, 128, 0.47)
        border-radius 5% / 50%
      p
        font-size 5vw
        text-align center
        padding 1vw
        position absolute
        top 10%
        bottom 10%
        width 100%
        height 80%
        background #3F51B5
        display none
        border-radius 1vw

button
  width 100%
  padding 1.5vw
  display none
  border none
  background rgba(49, 76, 99, 0.84)
  font-size 1vw
  color white
  font-style oblique
  cursor pointer




