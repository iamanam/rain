@import "../../stylesheets/global.styl"
#rule_set
  padding 2%
  .typedbox
    margin-top 10px
    display flex
    flex-direction column
    min-height 60px
    font-size 1vw
    #typed
      font-size 1.5em
      text-transform capitalize
      font-family monospace
      width auto
      background-color aliceblue
      padding .5vw
      border-radius .5vw
      &:before
       content ">> "
      &:after
        content "|"

      /*animation-delay 5000ms*/

    @keyframes grow {
      from {
        width 0%
        background aliceblue
        opacity .4
      }
      to {
        width 100%
        background yellow
        opacity 1
      }
    }

  .rule_info
    h1
      headText(3vw)
      border-color #4CAF50
    h2 //headSecondaryText(size,pad,margin)
      headSecondaryText(3vw, 5px, 5px, #F44336)
  button
    &.agree
      width 100%
      height 25px
      display none

#ruleBox
  display flex
  margin-top 20px
  .img_ani
    flex-basis auto
    flex-grow 0
    img
      height auto
      width 100%

  ul.li_place
    background-color rgba(158, 158, 158, 0.3)
    display flex
    text-transform uppercase
    font-family monospace
    flex-wrap wrap
    flex-direction column
    flex-grow 2
    color #CDDC39
    .li_rule
      padding .5vw
      font-size 1.5vw
      font-weight bold

.typedElement
  padding 2%
  h1
    font-size 4vmax
    display block
    background #CDDC39
    padding 5px
    border 1vw solid gray
    color brown
    margin 0
