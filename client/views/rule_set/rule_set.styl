@import "../../stylesheets/global.styl"
#rule_set
  padding 2%
  .rule_info
    h1
      headText(4vw)
      border-color #4CAF50
    h2 //headSecondaryText(size,pad,margin)
      headSecondaryText(3vw, 5px, 5px, #F44336)

    .typedbox
      margin-bottom 10px
      display flex
      flex-direction column
      min-height 60px

      #typed
        font-size 2em
        text-transform capitalize
        font-family monospace
        text-align center
        &:after
          content "|"

      #indicator
        height 10px
        animation-name grow
        display block
        animation-timing-function linear
        margin-top 15px
        opacity 0
        animation-delay 5000ms

      @keyframes grow {
        from {
          width 0%
          background aliceblue
          opacity .4
        }
        to {
          width 100%
          background yellow
          opacity 1
        }
      }

  button
    &.agree
      width 100%
      height 25px
      display none

#ruleBox
  display flex
  .img_ani
    flex-basis auto
    flex-grow 0
    img
      height auto
      width 100%

  ul.li_place
    background-color rgba(158, 158, 158, 0.3)
    display flex
    text-transform uppercase
    font-family monospace
    flex-wrap wrap
    flex-direction column
    flex-grow 2
    color #CDDC39
    .li_rule
      padding .5vw
      font-size 2vw
      margin .5vw
      font-weight bold

.typedElement
  padding 2%
  h1
    font-size 4vmax
    display block
    background #CDDC39
    padding 5px
    border 1vw solid gray
    color brown
    margin 0
