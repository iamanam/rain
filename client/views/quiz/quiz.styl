@import "../../stylesheets/global.styl"
#quiz
  display flex
  margin 3vw
  .form_container
    flex-basis 100%
    padding 2vw
    .intro
      h3
        background-color rgba(121, 85, 72, 0.65)
        headSecondaryText(3vw, .3vw, 0, #CDDC39)
        line-height 1.3
        text-shadow none
        text-align center
        text-transform capitalize
        border-radius 4vw

    form.question
      width 80%
      margin 3vw auto
      padding 2vw
      border 2px solid gainsboro
      min-height 165px
      border-radius(1vw)
      input[type="number"]
        display block
        width 15%
        height 40px
        margin 15px 30px
        transition border 0.3s
        text-align center
        font-size 1vw
        border-radius(1vw)
        &:focus
          outline none
          border: solid 2px #969696;
      input[type="submit"]
        width 50%
        display block
        margin 0 auto
        padding 10px
        transition border 0.5s
        border none
        background #4CAF50
        border-radius(5px)
        &:hover
          outline none
          border-bottom #7f1124 2px solid

      .question_label
        font-size 2vw
        display block
        padding 5px
        &:after
          content "?"

      ul
        no-extra()
        list-style none
        margin 5px
        font-size 2vw
        display flex
        li
          flex-basis 25%
          flex-wrap wrap
          flex-grow 1
          padding 10px
          background #009688
          margin 0 5px
          border-radius 2vw
          border 2px solid #8BC34A
          transition all 200ms
          &:before
            content "\f10c"
          &:hover
            border-width 1px 8px
            border-color gold
            border-style solid dotted
            color white;
            font-size 110%
            &:before
              content "\f111"
    #stephold
      display flex
      flex-direction row
      flex-basis 100%
      span
        margin 5px
        i.fa-square
          transition all 1s 0s;














