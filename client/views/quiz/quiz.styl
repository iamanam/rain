@import "../../stylesheets/global.styl"
#quiz
  display flex
  margin 3vw
  .form_container
    flex-basis 100%
    padding 2vw
    .intro
      h3
        background-color rgba(121, 85, 72, 0.65)
        headSecondaryText(4vw, .5vw, 0, #CDDC39)
        line-height 1.3
        text-shadow none
        text-align center
        text-transform capitalize

    form.question
      flex-basis 100%
      margin 3vw 0
      padding 2vw
      border 2px solid gainsboro
      min-height 135px
      input[type="text"]
        width 95%
        height 20px
        margin 10px 0
        border-radius 10px
        box-shadow none
        appearance none
        padding: 10px
        border solid 1px #dcdcdc
        transition box-shadow 0.3s, border 0.3s
        &:focus
          outline none
          border: solid 5px #969696;
      input[type="submit"]
        width 50%
        display block
        margin 0 auto
        padding 10px
        transition border 0.5s
        border none
        background #4CAF50
        border-radius(5px)
        &:hover
          outline none
          border-bottom #7f1124 2px solid

      .question_label
        font-size 3vw
        display block
        padding 5px
      ul
        no-extra()
        list-style none
        margin 5px
        font-size 2.4vw
        display flex
        li
          flex-basis 25%
          flex-wrap wrap
          padding 10px
          background #607D8B
          margin 0 5px
          &:before
            content "\f10c"
          &:hover
            &:before
              content "\f111"
    #stephold
      display flex
      flex-direction row
      flex-basis 100%
      span
        margin 5px
        i.fa-square
          transition all 1s 0s;














